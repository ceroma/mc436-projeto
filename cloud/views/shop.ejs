<!DOCTYPE html>
<html>
  <head>
    <title>CompreFacil.com</title>
    <link href="/css/base.css" rel="stylesheet">
    <link href="/css/shop.css" rel="stylesheet">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <script src="/js/shop.js" type="text/javascript"></script>
  </head>
  <body>
    <% include components/navbar %>

    <div class="container">

      <!-- Cart Reminder -->
      <% if (pending_cart) { %>
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <div id="reminder" class="alert alert-warning alert-dismissable">
              <button type="button" class="close" onclick="dismissReminder();">
                &times;
              </button>
              <%= user.get('name').split(' ')[0] %>,
              vocÃª tem um carrinho pendente!
              <a href="<%= '/cart/' + pending_cart.id %>">Ver Carrinho</a>
            </div>
          </div>
        </div>
      <% } %>

      <!-- Search Bar -->
      <form method="get" action="/shop">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <div class="input-group input-group-lg">
              <input
                type="text"
                class="form-control"
                name="q"
                placeholder="Digite o nome de um produto.."
                value="<%= search_query ? search_query : '' %>">
              <span class="input-group-btn">
                <input type="submit" class="btn btn-default" value="Buscar">
              </span>
            </div>
          </div>
        </div>
      </form>

      <!-- Products -->
      <br />
      <form method="post" action="/cart/create">
        <div class="row">
          <% for (var i = 0; i < 4; i++) { %>
            <div class="col-md-3">
              <% for (var j = 0; 4*j+i < products.length; j++) { %>
                <% var product = products[4*j+i]; %>
                <% include components/product %>
              <% } %>
            </div>
          <% } %>
        </div>
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <input
              type="submit"
              class="btn btn-block btn-lg btn-success"
              value="Comprar">
          </div>
        </div>
      </form>

    </div>
  </body>
</html>
