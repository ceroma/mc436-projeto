<!DOCTYPE html>
<html>
  <head>
    <title>CompreFacil.com</title>
    <link href="/css/base.css" rel="stylesheet">
    <link href="/css/shop.css" rel="stylesheet">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <script src="/js/shop.js" type="text/javascript"></script>
  </head>
  <body>
    <% include navbar %>

    <div class="container">

      <% if (pending_cart) { %>
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <div id="reminder" class="alert alert-warning alert-dismissable">
              <button type="button" class="close" onclick="dismissReminder();">
                &times;
              </button>
              <%= user.get('name').split(' ')[0] %>,
              você tem um carrinho pendente!
              <a href="<%= '/cart/' + pending_cart.id %>">Ver Carrinho</a>
            </div>
          </div>
        </div>
      <% } %>

      <h1><p class="text-center">Produtos disponíveis:</p></h1>
      <br />
      <form method="post" action="/cart/create">
        <div class="row">
          <% for (var i = 0; i < 4; i++) { %>
            <div class="col-md-3">
              <% for (var j = 0; 4*j+i < products.length; j++) { %>
                <% var product = products[4*j+i]; %>
                <% include components/shop-item %>
              <% } %>
            </div>
          <% } %>
        </div>
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <input
              type="submit"
              class="btn btn-block btn-lg btn-success"
              value="Comprar">
          </div>
        </div>
      </form>

    </div>
  </body>
</html>
