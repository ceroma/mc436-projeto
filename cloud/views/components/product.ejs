<div class="product panel panel-info">
  <div class="panel-heading text-center">
    <%= product.get('name') %>
  </div>

  <div class="panel-body">
    <img src="<%= product.get('imageSrc') %>" class="img-responsive">
  </div>

  <div class="panel-footer">
    <input
      name="products[]"
      type="hidden"
      value="<%= product.id %>">

    <p class="text-center">
      Pre√ßo: <%= 'R$' + product.get('price') %>
    </p>

    <div class="input-group">
      <span class="input-group-btn">
        <button
          class="btn btn-default btn-sm"
          type="button"
          onclick="removeItem(this);">
          -
        </button>
      </span>

      <input
        class="input-sm form-control"
        name="quantities[]"
        type="number"
        min="0"
        max="99"
        value="0">

      <span class="input-group-btn">
        <button
          class="btn btn-default btn-sm"
          type="button"
          onclick="addItem(this);">
          +
        </button>
      </span>
    </div>
  </div>
</div>
